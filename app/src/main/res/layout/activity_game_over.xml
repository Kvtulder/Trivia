<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="nl.kvtulder.trivia.GameOverActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Over"
                android:textAlignment="center"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp"
                tools:text="Score" />

            <TextView
                android:id="@+id/questionsAnsweredText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp"
                tools:text="Score" />

            <Button
                android:id="@+id/submitHighscoreButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Highscore" />

            <Button
                android:id="@+id/viewHighscoresButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View HighScores" />

            <Button
                android:id="@+id/menuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return to menu" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
